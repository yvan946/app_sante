<?xml version="1.0" encoding="UTF-8"?>
<GridLayout row="1" columns="*,*,*,*,*" class="bg-white border-t border-gray-200 p-2" loaded="onLoaded">
    <GridLayout col="0" rows="auto, auto" tap="{{ onCalendarTap }}" class="text-center p-2 nav-button">
        <Label row="0" text="📅" class="text-2xl text-center"/>
        <Label row="1" text="Calendrier" class="text-xs text-center text-gray-600"/>
    </GridLayout>
    
    <GridLayout col="1" rows="auto, auto" tap="{{ onContactTap }}" class="text-center p-2 nav-button">
        <Label row="0" text="👥" class="text-2xl text-center"/>
        <Label row="1" text="Contact" class="text-xs text-center text-gray-600"/>
    </GridLayout>
    
    <GridLayout col="2" rows="auto, auto" tap="{{ onDocumentsTap }}" class="text-center p-2 nav-button">
        <Label row="0" text="📄" class="text-2xl text-center"/>
        <Label row="1" text="Documents" class="text-xs text-center text-gray-600"/>
    </GridLayout>

    <GridLayout col="3" rows="auto, auto" tap="{{ onTreatmentsTap }}" class="text-center p-2 nav-button">
        <Label row="0" text="💊" class="text-2xl text-center"/>
        <Label row="1" text="Traitements" class="text-xs text-center text-gray-600"/>
    </GridLayout>

    <GridLayout col="4" rows="auto, auto" tap="{{ onSponsorsTap }}" class="text-center p-2 nav-button">
        <Label row="0" text="🤝" class="text-2xl text-center"/>
        <Label row="1" text="Sponsors" class="text-xs text-center text-gray-600"/>
    </GridLayout>
</GridLayout>